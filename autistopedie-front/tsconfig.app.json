{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/types.d.ts"],
    "exclude": ["src/**/__tests__/*", "node_modules"],
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "skipLibCheck": true,
        "esModuleInterop": true, // Pour améliorer la compatibilité avec les modules CommonJS
        "moduleResolution": "Node", // Assure que TypeScript résout correctement les modules externes
        "target": "ESNext", // Permet de cibler les dernières versions de JavaScript
        "module": "ESNext", // Utilisation des modules ES
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}
